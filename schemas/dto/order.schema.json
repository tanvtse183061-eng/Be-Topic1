{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://evdm.local/schemas/dto/order.schema.json",
  "title": "OrderRequest",
  "type": "object",
  "required": ["orderNumber", "quotationId", "customerId", "userId", "inventoryId", "orderDate"],
  "properties": {
    "orderNumber": { "type": "string", "minLength": 3, "maxLength": 100 },
    "quotationId": { "$ref": "./_shared.schema.json#/$defs/UUID" },
    "customerId": { "$ref": "./_shared.schema.json#/$defs/UUID" },
    "userId": { "$ref": "./_shared.schema.json#/$defs/UUID" },
    "inventoryId": { "$ref": "./_shared.schema.json#/$defs/UUID" },
    "orderDate": { "$ref": "./_shared.schema.json#/$defs/ISODate" },
    "status": { "type": "string" },
    "orderType": { "type": "string", "enum": ["RETAIL", "FLEET"] },
    "paymentStatus": { "type": "string", "enum": ["PENDING", "PARTIAL", "PAID", "REFUNDED", "FAILED"] },
    "deliveryStatus": { "type": "string", "enum": ["PENDING", "SCHEDULED", "SHIPPED", "DELIVERED", "RETURNED"] },
    "fulfillmentStatus": { "type": "string" }
  },
  "additionalProperties": false
}


