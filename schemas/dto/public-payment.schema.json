{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://evdm.local/schemas/dto/public-payment.schema.json",
  "title": "PublicPaymentRequest",
  "type": "object",
  "required": ["orderId", "amount", "currency", "method"],
  "properties": {
    "orderId": { "$ref": "./_shared.schema.json#/$defs/UUID" },
    "amount": { "type": "number", "minimum": 0 },
    "currency": { "type": "string", "minLength": 3, "maxLength": 3 },
    "method": { "type": "string", "enum": ["CARD", "BANK_TRANSFER", "CASH", "WALLET"] },
    "cardLast4": { "type": "string", "pattern": "^\\d{4}$" },
    "returnUrl": { "type": "string", "format": "uri" }
  },
  "additionalProperties": false
}


