{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://evdm.local/schemas/dto/appointment.schema.json",
  "title": "AppointmentRequest",
  "type": "object",
  "required": ["customerName", "preferredDateTime"],
  "properties": {
    "customerName": { "type": "string", "minLength": 1, "maxLength": 100 },
    "email": { "type": "string", "format": "email" },
    "phone": { "type": "string", "minLength": 9, "maxLength": 20 },
    "variantId": { "type": ["integer", "string"] },
    "inventoryId": { "$ref": "./_shared.schema.json#/$defs/UUID" },
    "preferredDateTime": { "$ref": "./_shared.schema.json#/$defs/ISODateTime" },
    "notes": { "type": "string", "maxLength": 1000 }
  },
  "additionalProperties": false
}


