{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://evdm.local/schemas/dto/quotation.schema.json",
  "title": "QuotationRequest",
  "type": "object",
  "required": ["customerId", "variantId", "basePrice"],
  "properties": {
    "customerId": { "$ref": "./_shared.schema.json#/$defs/UUID" },
    "variantId": { "$ref": "./_shared.schema.json#/$defs/UUID" },
    "basePrice": { "type": "number", "minimum": 0 },
    "discount": { "type": "number", "minimum": 0 },
    "tax": { "type": "number", "minimum": 0 },
    "validUntil": { "$ref": "./_shared.schema.json#/$defs/ISODate" },
    "notes": { "type": "string", "maxLength": 2000 }
  },
  "additionalProperties": false
}


